<%= form_with(model: @comment, local: true) do |f| %>
    <%= f.hidden_field :picture_id, value: @picture.id %>
    <div class = 'field'>
        <%= f.label :content, as: "Contenido" %>
        <%= f.text_field :content %>
     </div>
     <div class = 'actions'>
         <%= f.submit %> 
         <% end %>
     </div>  
     